<div class="table-responsive">
<table class="table"> 
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% blocks.each do |block| %>
      <tr>
        <td><%= block.name %></td>
        <td>
          <%= link_to 'Show', block %>
          <%= link_to 'Edit', edit_block_path(block) %>
          <%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>